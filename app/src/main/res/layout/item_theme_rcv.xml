<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/themeImg"
        android:scaleType="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_logo_onboarding"/>
    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_above="@id/bottomLinear"
        android:layout_marginBottom="150dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <ImageView

            android:id="@+id/beforeImg"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/img_before"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/nextImg"
            android:layout_marginLeft="20dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/img_next"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomLinear"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/shareImg"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/img_share"/>
        <ImageView
            android:id="@+id/downloadImg"
            android:layout_marginLeft="20dp"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:src="@drawable/img_download"/>
        <ImageView
            android:id="@+id/heartImg"
            android:layout_marginLeft="20dp"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/img_heart"/>
    </LinearLayout>


</RelativeLayout>