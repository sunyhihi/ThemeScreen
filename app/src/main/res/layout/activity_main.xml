<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        >
        <ImageView

            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/img_logo_onboarding"/>
        <TextView
            android:id="@+id/uniqueTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UNIQUE"
            android:textSize="45sp"
            android:textColor="@color/white"
            android:fontFamily="@font/point_regualar"
            android:textAlignment="center"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_below="@id/uniqueTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photography"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:fontFamily="@font/point_regualar"
            android:textAlignment="center"
           />
        <TextView
            android:layout_above="@id/text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Right Place To"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/point_regualar"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/text_2"
            android:layout_above="@id/text_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Your Best"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/point_regualar"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/text_3"
            android:layout_marginBottom="10dp"
           android:layout_above="@id/lineImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch Photos..."
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/point_regualar"
            android:textAlignment="center"
            />

        <ImageView
            android:id="@+id/lineImg"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:src="@drawable/img_line_onboarding"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>
    <TextView
        android:layout_marginBottom="40dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:id="@+id/descripTv"
        android:layout_above="@id/policyTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Before Continuing, You Are Ready To Accept The Terms &amp; Conditions As Well As Privacy Policy"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/point_regualar"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/policyTv"
        android:layout_above="@id/getStartedImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read terms &amp; conditions and privacy policy"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:fontFamily="@font/point_regualar"
        android:textAlignment="center"
        />
    <ImageView
        android:id="@+id/getStartedImg"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_button_onboarding"/>
</RelativeLayout>